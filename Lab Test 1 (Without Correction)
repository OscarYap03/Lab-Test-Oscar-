#include<iostream>
#include<iomanip>
using namespace std;

int main() {
	//input
	int roomType;
	int numNights;
	char PromocodeResponse;

	double PricePerNight = 0;
	double subtotal;
	double discountRate = 0;
	double discountAmount = 0;
	double finalTotal;
	double PromoDiscountRate = 0;

	cout << "=========================================\n";
	cout << "    FTMK GRAND HOTEL BOOKING SYSTEM   \n";
	cout << "=========================================\n";
	cout << "1. Standard Room - RM 150.00 per night\n";
	cout << "2. Deluxe Room - RM 200.00 per night\n";
	cout << "3. Suite Room - RM 300.00 per night\n";

	cout << "Please Enter Room Tytpe (1-3): ";
	cin >> roomType;

	if (roomType < 1 || roomType > 3) {
		cout << "Invalid input! Please Try Agian.\n";
	}
	else if (numNights = 0){
		cout << "Invalid input! Please Try Agian.\n";
		return 0;
	}
	std::setprecision;
	switch (roomType) {
	case 1: PricePerNight = 150.00; cout << "You selected Standard Room.\n";
		break;
	case 2: PricePerNight = 200.00; cout << "You selected Deluxe Room.\n";
		break;
	case 3: PricePerNight = 300.00; cout << "You selected Suite Room.\n";
		break;
	}

	//Input for Number Nights
	cout << "Please Enter Number Of Nights>>";
	cin >> numNights;
	if (numNights >= 1 && numNights <= 2) {
		discountRate = 0.00;//No Discount
	}
	else if (numNights >= 3 && numNights <= 5) {
		discountRate = 0.05;//5% discount
	}
	else if (numNights > 5) {
		discountRate = 0.10;//10% discount
	}

	//calculate subtotal(Before discounts)
	subtotal = PricePerNight * numNights;

	cout << "\n Do you have a Promo Code? (Y/N)";
	cin>> PromocodeResponse;

	//calculate discount 
	std::setprecision;
	discountAmount = subtotal * discountRate;
	finalTotal = subtotal - discountAmount;
if (PromocodeResponse == 'Y' || 'y') {
		PromoDiscountRate = 0.10;
		double PromoDiscount = finalTotal * PromoDiscountRate;
		finalTotal -= PromoDiscount;
	}

std::setprecision;
	cout << "\n----------------------------------- BOOKING SUMARY -----------------------------\n";
	cout << "\n Price Per Night: RM " << PricePerNight;
	cout << "\n Nights Stayed: " << numNights;
	cout << "\n Subtotal :RM " << subtotal;

	cout << "\n Discount(" << (discountRate * 100) << "%): RM " << discountAmount;

	if (PromocodeResponse == 'Y' || 'y') {
		double PromoDiscount = (PricePerNight * numNights * (discountRate * 100)) * PromoDiscountRate;
		cout << "\n Promo DISCOUNT (10.00%): RM" << PromoDiscount;

		cout << "\n Final Total: RM"<< finalTotal;
		cout << "\n-----------------------------------------------------------------------------------\n";
	}
	std::setprecision;
	if (finalTotal>= 1200.00) {
		cout << "VIP customer: You are eligible for free airport pickup!\n";
	}
	else if (finalTotal <= 300.00) {
		cout << "Enjoy your vacation.\n";
	}

	else {
		cout << "Thank You for booking with FTMK GRAND HOTEL.\n";
	}
	cout << "-----------------------------------------------------------------------------------\n";

	return 0;
}
